<%include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Modify <%= car.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= car._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Car Name:</label>
                    <input class="form-control" type="text" name="name" value="<%= car.name %>">
                </div>
                <div class="form-group">
                     <label>Car Image URL:</label>
                    <input class="form-control" type="text" name="image" value="<%= car.image %>">
                </div>
                <div class="form-group">
                        <label>Car Type:</label>
                    <input class="form-control" type="text" name="type" value="<%= car.type %>">
                </div>
                <div class="form-group">
                        <label>Car Price:</label>
                    <input class="form-control" type="text" name="price" value="<%= car.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/displayCar">Go Back</a>
        </div>
    </div>
</div>

<%include ../partials/footer%>
<%include partials/header%>

<div class="container">
        <div class="row">
             <h1 style="text-align:center;">New User</h1>
             <div style="width:30%; margin:25px auto;">
                 <form action="/registration" method="POST">
                    <div class="form-group">
                       <label> Name:</label>
                       <input class="form-control" name="name" type="text" placeholder="name" required>
                    </div>
                    <div class="form-group">
                        <label>Gender:</label>
                        <div>
                        Male
                        <input type="radio" name="gen" value="male" required>
                        Female
                        <input type="radio" name="gen" value="male" required>
                        </div> 
                    </div>   
                    <div class="form-group">
                        <label>DOB:</label> 
                        <input class="form-control" name="dob" type="date" placeholder="abc" required>
                     </div>
                    <div class="form-group">
                        <label>Username:</label> 
                        <input class="form-control" name="username" type="text" placeholder="abc" required>
                     </div>
                    <div class="form-group">
                        <label>Phone No:</label>
                        <input class="form-control" name="phoneNo" type="number" placeholder="XXXXXXXXXX" required>
                    </div>
                    <div class="form-group ">
                        <label>address</label>
                            <input type="text" class="form-control" placeholder="state" name="state" required>
                            <input type="text" class="form-control" placeholder="city" name="city" required>
                            <input type="number" class="form-control" placeholder="pin" name="pin" required>
                    </div>
                    <div class="form-group">
                        <label>DL Image:</label> 
                        <input class="form-control" name="dl" type="text" placeholder="Dl image link" required>
                    </div>
                    <div class="form-group">
                       <label>Email:</label> 
                       <input class="form-control" name="email" type="email" placeholder="abc@example.com" required>
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input class="form-control" name="pass" type="password" placeholder="password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/">Go back</a>
            </div>
        </div>
    </div>


<%include partials/footer%>